<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FontSizeApp.AbsoluteLayoutPaying">

    <AbsoluteLayout>
        <BoxView BackgroundColor = "#f7f7f7" AbsoluteLayout.LayoutBounds="0, 0, 1, 0.3" AbsoluteLayout.LayoutFlags="All"/>
        <StackLayout AbsoluteLayout.LayoutBounds="0, 0, 1, 0.3" AbsoluteLayout.LayoutFlags="All">
            <Label HorizontalOptions="Center" Text="$11.95" TextColor = "#33353a" FontSize = "60" FontAttributes = "Bold"/>
            <Button HorizontalOptions="Center" Text="Add $7.99 Credit" TextColor="White"
                    BackgroundColor = "#1695A3" BorderRadius = "15" HeightRequest = "35" FontSize = "15" FontAttributes = "Bold"/>
        </StackLayout>
        <StackLayout AbsoluteLayout.LayoutBounds="0, 0.7, 1, 0.7" AbsoluteLayout.LayoutFlags="All" Padding="0, 40, 0, 0" Spacing="20">
            <Label Text="Why pay for credit?" FontSize = "15" FontAttributes = "Bold" HorizontalTextAlignment="Center"/>
            <Label FontSize = "13" HorizontalTextAlignment="Center" HorizontalOptions="CenterAndExpand" >
                Because	you	can	reach people who aren’t	on SkyApp by calling mobile	and	landline numbers, or spending SMS, at low-cost rates.
            </Label>

        </StackLayout>
    </AbsoluteLayout>    
    
</ContentPage>