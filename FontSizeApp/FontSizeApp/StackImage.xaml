<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FontSizeApp.StackImage">
    <StackLayout>
        <Label Text="nyc_photographer" TextColor="Black" HorizontalOptions="Start"/>
        <Image Source="http://lorempixel.com/1920/1080/nature/3/" HorizontalOptions="CenterAndExpand"/>
        <StackLayout Orientation="Horizontal" Padding="0,20,0,0" Spacing="10">
            <Label Text="Like" TextColor=" #127ac7" />
            <Label Text="Comment" TextColor=" #127ac7"/>
            <Label Text="Share" TextColor=" #127ac7"/>
        </StackLayout>
        <StackLayout Orientation="Vertical" Padding="0,20,0,0">
            <BoxView Color="#f0f0f0" HeightRequest="1"/>
            <Label Text="700 Likes"/>
            <Label Text="Esta es una bonita foto de Suecia, iba conduciendo de vuelta a casa despues de un par de dias de trabajo en Dinamarca."/>
        </StackLayout>
    </StackLayout>
</ContentPage>